{
	"Name" : "The Hidden",
	"Description": "Allows The Hidden to be played in servers gamemodes",
	"Version": "1.0.0",
	"LoadPriority": 1,
	"RequiredOnClient": true,

	"Scripts": [
		// The Hidden
		{
			"Path": "gamemodes/sh_gamemode_hidden.nut",
			"RunOn": "( CLIENT || SERVER ) && MP",
			"ClientCallback": {
				"Before": "Sh_GamemodeHidden_Init"
			},

			"ServerCallback": {
				"Before": "Sh_GamemodeHidden_Init"
			}
		},
		{
			"Path": "gamemodes/_gamemode_hidden.nut",
			"RunOn": "SERVER && MP"
		},
        {
			"Path": "gamemodes/cl_gamemode_hidden.nut",
			"RunOn": "CLIENT && MP"
		},
	],

	"Localisation": [
		"resource/hidden_custom_%language%.txt"
	]
}